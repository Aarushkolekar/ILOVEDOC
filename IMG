    <!-- AdMob Integration Script -->
    <script>
        // AdMob Configuration - Using your provided Ad Unit ID
        const ADMOB_CONFIG = {
            // Banner Ad Unit IDs - Using your provided ID for all placements
            bannerTop: 'ca-app-pub-9892917958541817/9541680221',
            bannerMiddle: 'ca-app-pub-9892917958541817/9541680221',
            bannerBottom: 'ca-app-pub-9892917958541817/9541680221',
            
            // Interstitial Ad Unit ID (for between actions)
            interstitial: 'ca-app-pub-9892917958541817/9541680221'
        };

        // Initialize AdMob
        function initializeAdMob() {
            // In a real implementation, you would initialize the AdMob SDK here
            console.log('AdMob initialized with config:', ADMOB_CONFIG);
            
            // Display banner ads
            displayBannerAd('ad-banner-top', ADMOB_CONFIG.bannerTop);
            displayBannerAd('ad-banner-middle', ADMOB_CONFIG.bannerMiddle);
            displayBannerAd('ad-banner-bottom', ADMOB_CONFIG.bannerBottom);
        }

        // Display banner ad
        function displayBannerAd(containerId, adUnitId) {
            const container = document.getElementById(containerId);
            if (container) {
                // In a real implementation, this would load an actual ad
                container.innerHTML = `
                    <div style="width: 100%; height: 100%; display: flex; align-items: center; justify-content: center; background: #f0f0f0; border: 1px solid #ddd; border-radius: 4px;">
                        <div style="text-align: center;">
                            <p style="margin: 0; font-size: 14px; color: #666;">AdMob Banner Ad</p>
                            <p style="margin: 5px 0 0; font-size: 12px; color: #999;">Ad Unit: ${adUnitId}</p>
                            <p style="margin: 5px 0 0; font-size: 10px; color: #bbb;">Your AdMob ads will appear here</p>
                        </div>
                    </div>
                `;
            }
        }

        // Show interstitial ad
        function showInterstitialAd() {
            // In a real implementation, this would display an interstitial ad
            console.log('Showing interstitial ad:', ADMOB_CONFIG.interstitial);
            
            // For demo purposes, we'll just log to console
            return true;
        }

        // Tool selection functionality
        document.querySelectorAll('.tool-card').forEach(card => {
            card.addEventListener('click', function() {
                const tool = this.getAttribute('data-tool');
                openToolModal(tool);
            });
        });

        // Open tool modal
        function openToolModal(tool) {
            const modal = document.getElementById('toolModal');
            const modalTitle = document.getElementById('modalTitle');
            const processBtn = document.getElementById('processBtn');
            
            // Set modal title and button text based on selected tool
            const toolNames = {
                'merge': 'Merge PDF',
                'split': 'Split PDF',
                'compress': 'Compress PDF',
                'convert': 'Convert PDF',
                'edit': 'Edit PDF',
                'watermark': 'Add Watermark',
                'rotate': 'Rotate PDF',
                'unlock': 'Unlock PDF'
            };
            
            const actionTexts = {
                'merge': 'Merge PDF',
                'split': 'Split PDF',
                'compress': 'Compress PDF',
                'convert': 'Convert PDF',
                'edit': 'Edit PDF',
                'watermark': 'Add Watermark',
                'rotate': 'Rotate PDF',
                'unlock': 'Unlock PDF'
            };
            
            modalTitle.textContent = toolNames[tool];
            processBtn.textContent = actionTexts[tool];
            
            modal.style.display = 'flex';
            
            // Show interstitial ad when opening a tool
            showInterstitialAd();
        }

        // Close modal
        document.getElementById('closeModal').addEventListener('click', function() {
            document.getElementById('toolModal').style.display = 'none';
        });

        // File upload functionality
        const uploadArea = document.getElementById('uploadArea');
        const fileInput = document.getElementById('fileInput');
        const modalUploadArea = document.getElementById('modalUploadArea');
        const modalFileInput = document.createElement('input');
        modalFileInput.type = 'file';
        modalFileInput.multiple = true;
        modalFileInput.style.display = 'none';

        // Main upload area
        uploadArea.addEventListener('click', function() {
            fileInput.click();
        });

        uploadArea.addEventListener('dragover', function(e) {
            e.preventDefault();
            uploadArea.style.borderColor = 'var(--primary-color)';
            uploadArea.style.backgroundColor = 'rgba(52, 152, 219, 0.05)';
        });

        uploadArea.addEventListener('dragleave', function() {
            uploadArea.style.borderColor = '#ccc';
            uploadArea.style.backgroundColor = 'transparent';
        });

        uploadArea.addEventListener('drop', function(e) {
            e.preventDefault();
            uploadArea.style.borderColor = '#ccc';
            uploadArea.style.backgroundColor = 'transparent';
            
            if (e.dataTransfer.files.length > 0) {
                handleFiles(e.dataTransfer.files);
            }
        });

        fileInput.addEventListener('change', function() {
            if (fileInput.files.length > 0) {
                handleFiles(fileInput.files);
            }
        });

        // Modal upload area
        modalUploadArea.addEventListener('click', function() {
            modalFileInput.click();
        });

        modalUploadArea.addEventListener('dragover', function(e) {
            e.preventDefault();
            modalUploadArea.style.borderColor = 'var(--primary-color)';
            modalUploadArea.style.backgroundColor = 'rgba(52, 152, 219, 0.05)';
        });

        modalUploadArea.addEventListener('dragleave', function() {
            modalUploadArea.style.borderColor = '#ccc';
            modalUploadArea.style.backgroundColor = 'transparent';
        });

        modalUploadArea.addEventListener('drop', function(e) {
            e.preventDefault();
            modalUploadArea.style.borderColor = '#ccc';
            modalUploadArea.style.backgroundColor = 'transparent';
            
            if (e.dataTransfer.files.length > 0) {
                addFilesToList(e.dataTransfer.files);
            }
        });

        modalFileInput.addEventListener('change', function() {
            if (modalFileInput.files.length > 0) {
                addFilesToList(modalFileInput.files);
            }
        });

        // Handle file selection
        function handleFiles(files) {
            // For demo purposes, we'll just open the merge modal
            openToolModal('merge');
            addFilesToList(files);
        }

        // Add files to the file list in modal
        function addFilesToList(files) {
            const fileList = document.getElementById('fileList');
            
            for (let i = 0; i < files.length; i++) {
                const file = files[i];
                
                // Create file item
                const fileItem = document.createElement('div');
                fileItem.className = 'file-item';
                
                // File name
                const fileName = document.createElement('div');
                fileName.className = 'file-name';
                fileName.textContent = file.name;
                
                // File actions
                const fileActions = document.createElement('div');
                fileActions.className = 'file-actions';
                
                const moveUpBtn = document.createElement('button');
                moveUpBtn.className = 'action-btn';
                moveUpBtn.innerHTML = '<i class="fas fa-arrow-up"></i>';
                
                const moveDownBtn = document.createElement('button');
                moveDownBtn.className = 'action-btn';
                moveDownBtn.innerHTML = '<i class="fas fa-arrow-down"></i>';
                
                const removeBtn = document.createElement('button');
                removeBtn.className = 'action-btn';
                removeBtn.innerHTML = '<i class="fas fa-trash"></i>';
                
                // Remove file functionality
                removeBtn.addEventListener('click', function() {
                    fileItem.remove();
                });
                
                fileActions.appendChild(moveUpBtn);
                fileActions.appendChild(moveDownBtn);
                fileActions.appendChild(removeBtn);
                
                fileItem.appendChild(fileName);
                fileItem.appendChild(fileActions);
                
                fileList.appendChild(fileItem);
            }
        }

        // Process button functionality
        document.getElementById('processBtn').addEventListener('click', function() {
            const fileList = document.getElementById('fileList');
            if (fileList.children.length === 0) {
                alert('Please add at least one file to process.');
                return;
            }
            
            // For demo purposes, we'll simulate processing
            alert('Processing your files... This would normally process your PDF files.');
            
            // Show interstitial ad after processing
            showInterstitialAd();
            
            // Close modal after "processing"
            document.getElementById('toolModal').style.display = 'none';
        });

        // Initialize AdMob when page loads
        window.addEventListener('load', initializeAdMob);
    </script>
</body>
</html>
